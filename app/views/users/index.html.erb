<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <p><%= e %></p>
    <% end %>
<% end %>
<h1>Registration</h1>
<form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    First Name: <input type="text" name = "user[first_name]"><br>
    Last Name: <input type="text" name = "user[last_name]"><br>
    Email: <input type="text" name = "user[email]"><br>
    Password: <input type="password" id="Password" name = "user[password]">	<br>
    <input type="submit" value="Register">
</form>

<h1>Login</h1>
<form action="/sessions" method="post">
    <input type="hidden" name="authenticity_token" value="<% form_authenticity_token %>">
    Email: <input type="text" name="login[email_in]" value=""><br>
    Password: <input type="password" name="login[pass_in]" value=""><br>
    <input type="submit" name="" value="Login"><br>
</form>